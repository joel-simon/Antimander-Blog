mixin header()
    header
        .menu-inner
            a.logo.cursor-pointer(href="#cover")
                .symbol
                h1.cursor-pointer Antimander
            .links
                a(href="https://github.com/joel-simon/antimander/") GitHub

mixin nav()
    - var sections = ['overview', 'background', 'metrics', 'methods', 'results', 'conclusion', 'references']
    nav
        .menu-inner
            ol
                for name, idx in sections
                    li.navlink.caption(id="nav-"+name)
                        a(href='#'+name)!=name
    input#toggle-menu.cursor-pointer.hidden(type="button", value="Toggle Menu")

mixin text-container(text)
    div.outer-text-container
        div.inner-text-container
            p!=text

mixin district_viewer()
    .district-viewer
        .parcoords
        .canvas-container
            p.zero_warning.metadata.hidden None selected, click to reset
        .row
            p.view_count.metadata Viewing N / K selected
            svg.dist_chart(height="50", width="384px")

